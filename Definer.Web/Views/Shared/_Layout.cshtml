<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title> @ViewBag.Title </title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900,900i|Oswald:300,400,500,600,700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/Content/img/icons/favicon-32x32.png" />
    @Styles.Render("~/bundles/style")
</head>
<body>
    <div class="loading">
        <div class="loader"></div>
    </div>
    <div id="app">
        <div>
            @*@Html.Partial("_Header")*@
            <div class="container layout-menu">
                <div class="row">
                    @*@Html.Partial("_Menu")*@
                    @RenderBody()
                </div>
            </div>
            @*@Html.Partial("_Footer")*@
        </div>
    </div>

    @Scripts.Render("~/bundles/scripts")
    <script>
        $(document).ready(function () {
            $(".loading").hide();
        });
    </script>
</body>
</html>
